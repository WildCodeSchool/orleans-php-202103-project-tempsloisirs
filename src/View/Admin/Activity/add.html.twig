{% extends 'layout.html.twig' %}

{% block stylesheet %}<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
{% endblock %}

{% block title %}Ajouter une activité{% endblock %}

{% block content %}
    <main class="container">
        <header class="row admin-header d-flex justify-content-between flex-column-reverse flex-md-row">
            <h1 class="col-12 col-md text-center text-md-start">Ajouter une activité</h1>
            <div class="col-12 col-md d-flex justify-content-center justify-content-md-end">
                <a class="btn btn-primary primary-btn align-self-center" href="#" role="button">Retour aux activités</a>
            </div>
        </header>
        

        <form>
            <!-- Name-->
            <div class="mb-3">
                <label for="activityName" class="form-label">Nom :</label>
                <input type="text" class="form-control" id="activityName" aria-describedby="nameHelp">
                <div id="nameHelp" class="form-text">Veuillez entrer le nom de l'activité proposée (exemple: Dictée).</div>
            </div>
            <!--Weekdays-->
                <label for="weekday" class="form-label">Jour de la semaine :</label></br>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="weekday" id="weekday">
                    <label class="form-check-label" for="weekday">
                        Lundi
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="weekday" id="weekday" checked>
                    <label class="form-check-label" for="weekday">
                        Mardi
                    </label>
                </div>
                
            <!--Instructor-->
            <div class="mb-3">
                <label for="instructor" class="form-label">Moniteur :</label>
                <input type="text" class="form-control" id="instructor" aria-describedby="instructorHelp">
                <div id="instructorHelp" class="form-text">Veuillez entrer le nom de la personne qui anime cette activité (exemple: Didier Raoult).</div>
            </div>

            <!--Start time-->
            <div class="mb-3">
                <label for="startTime" class="form-label">Heure de début :</label>
                <input type="time" class="form-control" id="startTime" aria-describedby="startTimeHelp">
                <div id="statTimeHelp" class="form-text">Veuillez entrer l'heure à laquelle commence cette activité.</div>
            </div>
            <!--End time-->
            <div class="mb-3">
                <label for="endTime" class="form-label">Heure de fin :</label>
                <input type="time" class="form-control" id="endTime" aria-describedby="endTimeHelp">
                <div id="endTimeHelp" class="form-text">Veuillez entrer l'heure à laquelle termine cette activité.</div>
            </div>
            <!--Image-->
            <div class="mb-3">
                <label for="image" class="form-label">Image :</label>
                <input type="url" class="form-control" id="image" aria-describedby="imageHelp">
                <div id="imageHelp" class="form-text">Veuillez entrer un lien vers l'image que vous souhaitez afficher.</div>
            </div>

            <!--Description-->
            <div class="form-group">
                <label for="description">Description :</label>
                <textarea class="form-control" id="description" rows="3" aria-describedby="descriptionHelp"></textarea>
                <div id="descriptionHelp" class="form-text">Veuillez entrer une brève description de l'activité proposée, afin d'aider vos membres à comprendre de quoi il s'agit.</div>
            </div>
 

            <button type="submit" class="btn btn-primary w-100">Ajouter l'activité</button>
        </form>
    </main>
{% endblock %}

{% block javascript %}<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>{% endblock %}




