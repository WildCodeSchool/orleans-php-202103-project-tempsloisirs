{% extends 'layout.html.twig' %}

{% block title %}
    Admin - Activités
{% endblock %}

{% block stylesheet %}
    <!--Bootstrap: remove once merged-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="/assets/css/style.css" rel="stylesheet">
    <link href="/assets/css/admin.css" rel="stylesheet">
    <link href="/assets/css/admin_activities.css" rel="stylesheet">
{% endblock %}

{% block content %}

<div class="container">  
    
		<header class="admin-header d-flex justify-content-lg-between flex-lg-row align-items-lg-center flex-column px-lg-5 mb-lg-5 mb-3">
			<h1 class="text-center h1">Gérer les activités</h1>
			<a href="/AdminActivity/add" class="btn btn-primary mt-3">Ajouter une activité</a>
		</header>
 
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4">
        {% for activity in activities %}
        <div class="col">
            <div class="card">
                <img class="card-img-top h-50" src="https://picsum.photos/id/1/200/300" alt="Card image cap">
                <div class="card-body h-50 d-flex flex-column justify-content-around">
                    <h5 class="card-title">{{ activity.name }}</h5>
                    <p class="card-text">{{ activity.description }}</p>
                    <p class="card-text">{{activity.price}}€</p>
                    <div class="row">
                        <div class="col d-flex flex-row justify-content-around">
                            <a href="AdminActivity/edit" class="btn btn-primary align-self-end w-100 my-1">Editer</a>
                        </div>
                        <div class="col d-flex flex-row justify-content-around">
                            <a href="AdminActivity/delete" class="btn btn-danger delete align-self-end w-100 my-1">Supprimer</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

		<footer class="admin-footer d-flex justify-content-center flex-md-row flex-column mt-lg-5 mt-2">
			<a href="#" class="btn btn-primary btn-lg mx-1 my-1">Retour au site principal</a>
			<a href="#" class="btn btn-primary btn-lg mx-1 my-1">Accueil Admin</a>
		</footer>

    
</div>

{% endblock %}

{% block javascript %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
{% endblock %}