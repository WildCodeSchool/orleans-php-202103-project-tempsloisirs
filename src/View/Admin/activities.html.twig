{% extends 'layout.html.twig' %}

{% block title %}
    Admin - Activités
{% endblock %}

{% block stylesheet %}
    <!--Bootstrap: remove once merged-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="/assets/css/admin_activities.css" rel="stylesheet">
{% endblock %}

{% block content %}

<div class="container">  
    <header>
            <h1>Gérer les activités</h1>
            <a class="btn btn-primary" href="#" role="button">Ajouter une activité</a>
    </header>

    <div class="row">
        <div class= "col-12 align-self-end">
            
        </div>
    </div>

 
    <div class="row row-cols-4">
        {% for activity in activities %}
        <div class="col-12 col-md-4">
            <!--Card-->
            <div class="card w-18rem" >
                <img class="card-img-top" src="https://picsum.photos/id/1/200/300" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{ activity.name }}</h5>
                    <p class="card-text">{{ activity.description }} </br> {{ activity.price }}€</p>
                    <div class = "card-buttons">
                        <a href="#" class="btn btn-primary">Editer</a>
                        <a href="#" class="btn btn-danger">Supprimer</a>
                    </div>
                </div>
            </div>
            <!-- End of card-->
        </div>
        {% endfor %}
    </div>


    <footer>
        <button type="button" class="btn btn-outline-primary">Retour au site principal</button>
        <button type="button" class="btn btn-outline-primary">Accueil admin</button>
    </footer>
</div>

{% endblock %}

{% block javascript %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
{% endblock %}