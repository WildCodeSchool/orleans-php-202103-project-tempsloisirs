{% extends 'layout.html.twig' %}

{% block title %}
    Admin - Activités
{% endblock %}

{% block stylesheet %}
    <!--Bootstrap: remove once merged-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="/assets/css/style.css" rel="stylesheet">
    <link href="/assets/css/admin_activities.css" rel="stylesheet">
{% endblock %}

{% block content %}

<div class="container-fluid">  
    
    <header class="admin-header row d-flex flex-row justify-content-between mt-4">
        <!--<div >-->
            <div class="col">
                <h1>Gérer les activités</h1>
            </div>
            <div class="col d-flex justify-content-end align-items-baseline">
                <a class="btn primary-btn" href="#" role="button">Ajouter une activité</a>
            </div>
        <!--</div>-->
    </header>
 
    <div class="row">
        {% for activity in activities %}
        <div class="col-12 col-sm">
            <div class="card h-100 mr-auto">
                <img class="card-img-top" src="https://picsum.photos/id/1/200/300" alt="Card image cap">
                <div class="card-body d-flex flex-column justify-content-around">
                    <h5 class="card-title">{{ activity.name }}</h5>
                    <p class="card-text">{{ activity.description }}</p>
                    <div class="col d-flex flex-row justify-content-around">
                        <a href="#" class="btn primary-btn align-self-end w-50 me-1">Editer</a>
                        <a href="#" class="btn delete align-self-end w-50 ms-1">Supprimer</a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

    <footer class="mt-4 d-flex justify-content-center">
            <a href="#" class="btn primary-btn me-1">Retour au site principal</a>
            <a href="#" class="btn primary-btn ms-1">Accueil Admin</a>
    </footer>

    
</div>

{% endblock %}

{% block javascript %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
{% endblock %}