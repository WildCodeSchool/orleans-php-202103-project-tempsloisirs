{% extends 'layout.html.twig' %}

{% block title %}
    Admin - Activités
{% endblock %}

{% block stylesheet %}
    <!--Bootstrap: remove once merged-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="/assets/css/style.css" rel="stylesheet">
    <link href="/assets/css/admin_activities.css" rel="stylesheet">
{% endblock %}

{% block content %}

<div class="container-fluid">  
    
    <header class="admin-header row d-flex justify-content-between mt-4">
            <div class="col-12 col-sm-6 d-flex justify-content-center">
                <h1 class="text-center">Gérer les activités</h1>
            </div>
            <div class="col-12 col-sm-6 d-flex justify-content-center">
                <a class="btn primary-btn my-1 w-75" href="AdminActivity/add" role="button">Ajouter une activité</a>
            </div>
    </header>
 
    <div class="row row-cols-1 row-cols-md-5">
        {% for activity in activities %}
        <div class="card-group col-12 col-sm">
            <div class="card">
                <img class="card-img-top h-50" src="https://picsum.photos/id/1/200/300" alt="Card image cap">
                <div class="card-body d-flex flex-column justify-content-around">
                    <h5 class="card-title">{{ activity.name }}</h5>
                    <p class="card-text">{{ activity.description }}</p>
                        <div class="row">
                            <div class="col d-flex flex-row justify-content-around">
                                <a href="AdminActivity/edit" class="btn primary-btn align-self-end w-100 my-1">Editer</a>
                            </div>
                            <div class="col d-flex flex-row justify-content-around">
                                <a href="AdminActivity/delete" class="btn delete align-self-end w-100 my-1">Supprimer</a>
                            </div>
                        </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

    <footer class="admin-footer row mt-4 d-flex justify-content-center">
        <div class="col col-12 col-md-6 d-flex justify-content-center">
            <a href="#" class="btn primary-btn w-75 me-1 my-1">Retour au site principal</a>
        </div>
        <div class="col col-12 col-md-6 d-flex justify-content-center">
            <a href="#" class="btn primary-btn w-75 me-1 my-1">Accueil Admin</a>
        </div>
    </footer>

    
</div>

{% endblock %}

{% block javascript %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
{% endblock %}