<form method="post">

	{% if errorsEmpty is defined %}
		{% for error in errorsEmpty %}
			<div class="alert alert-danger col col-lg-6 col-md-12 mx-auto" role="alert">{{ error }}</div>
		{% endfor %}
	{% endif %}

	{% if errorsLength is defined %}
		{% for error in errorsLength %}
			<div class="alert alert-danger col col-lg-6 col-md-12 mx-auto" role="alert">{{ error }}</div>
		{% endfor %}
	{% endif %}

	{% if errorsFilter is defined %}
		{% for error in errorsFilter %}
			<div class="alert alert-danger col col-lg-6 col-md-12 mx-auto" role="alert">{{ error }}</div>
		{% endfor %}
	{% endif %}


	<div class="form-row mt-sm-0 px-xs-0 py-sm-0">
		<div class="form-group col col-lg-6 col-md-12 mx-auto">
			<label class="col-sm-2 col-form-label col-form-label-lg" for="firstname">Pr√©nom</label>
			<input type="text" value="{{ boardMember.firstname }}" name="firstname" class="form-control shadow-sm p-3 mb-1 bg-white rounded" id="firstname" placeholder="John">
		</div>
		<div class="form-group col col-lg-6 col-md-12 mx-auto">
			<label class="col-sm-2 col-form-label col-form-label-lg" for="surname">Nom</label>
			<input type="text" value="{{ boardMember.surname }}" name="surname" class="form-control shadow-sm p-3 mb-1 bg-white rounded" id="surname" placeholder="Cliquebasse">
		</div>
		<div class="form-group col col-lg-6 col-md-12 mx-auto">
			<label class="col-sm-2 col-form-label col-form-label-lg" for="role">Fonction</label>
			<input type="text" value="{{ boardMember.role }}" name="role" class="form-control shadow-sm p-3 mb-1 bg-white rounded" id="role" placeholder="Adjoint">
		</div>
		<div class="form-group col col-lg-6 col-md-12 mx-auto">
			<label class="col-sm-2 col-form-label col-form-label-lg" for="image">Photo</label>
			<input type="text" value="{{ boardMember.image }}" name="image" class="form-control shadow-sm p-3 mb-4 bg-white rounded" id="image" placeholder="https://www.tempsdesloisirs/john-cliquebasse.png">
		</div>
		<div class="form-group col col-lg-6 col-md-12 mx-auto">
			<button type="submit" class="btn btn-primary btn-lg w-100" value="Valider">Ajouter un membre</button>
		</div>
	</div>

</form>
