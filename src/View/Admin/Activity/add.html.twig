{% extends 'layout.html.twig' %}

{% block stylesheet %}<link rel="stylesheet" href="/assets/css/admin.css">
{% endblock %}

{% block title %}Ajouter une activité{% endblock %}

{% block content %}
    <main class="container d-flex flex-column">
        <header class="row admin-header d-flex justify-content-between flex-column-reverse flex-md-row my-3">
            <h1 class="h1 col-12 col-md text-center text-md-start">Ajouter une activité</h1>
            <div class="col-12 col-md d-flex justify-content-center justify-content-md-end">
                <a class="btn btn-primary primary-btn align-self-center" href="index" role="button">Retour aux activités</a>
            </div>
        </header>     

        <form method="post" action="" class="w-50 align-self-center" novalidate>
            <!-- Name-->
            <div class="mb-3">
                <label for="activityName" class="form-label">Activité :</label>
                <input type="text" class="form-control" name ="name" id="activityName" aria-describedby="nameHelp" required>
                <div id="nameHelp" class="form-text">Veuillez entrer le nom de l'activité proposée (exemple: Dictée).</div>
            </div>
            <!--Weekdays-->
            <div class="mb-3 row">                
                <label for="weekday" class="form-label">Jour de la semaine :
                </label>
                    <div class="col">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="weekday" id="weekday" required>
                            <label class="form-check-label" for="weekday">
                                Lundi
                            </label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="weekday" id="weekday">
                            <label class="form-check-label" for="weekday">
                                Mardi
                            </label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="weekday" id="weekday">
                            <label class="form-check-label" for="weekday">
                                Mercredi
                            </label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="weekday" id="weekday">
                            <label class="form-check-label" for="weekday">
                                Jeudi
                            </label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="weekday" id="weekday">
                            <label class="form-check-label" for="weekday">
                                Vendredi
                            </label>
                        </div>
                    </div>
            </div>
            
                
                
            <!--Instructor-->
            <div class="mb-3">
                <label for="instructor" class="form-label">Moniteur :</label>
                <input type="text" class="form-control" id="instructor" name="instructor" aria-describedby="instructorHelp" required>
                <div id="instructorHelp" class="form-text">Veuillez entrer le nom de la personne qui anime cette activité (exemple: Didier Raoult).</div>
            </div>

            <!--Start time-->
            <div class="row mb-3">
                <div class="col">
                    <label for="startTime" class="form-label">Heure de début :</label>
                    <input type="time" class="form-control" id="startTime" name="startTime" aria-describedby="startTimeHelp">
                    <div id="statTimeHelp" class="form-text">Veuillez entrer l'heure à laquelle commence cette activité.</div>
                </div>
                <!--End time-->
                <div class="col">
                    <label for="endTime" class="form-label">Heure de fin :</label>
                    <input type="time" class="form-control" id="endTime" name="endTime" aria-describedby="endTimeHelp">
                    <div id="endTimeHelp" class="form-text">Veuillez entrer l'heure à laquelle termine cette activité.</div>
                </div>
            </div>
            <!--Image-->
            <div class="mb-3">
                <label for="image" class="form-label">Image :</label>
                <input type="url" class="form-control" id="image" name="image" aria-describedby="imageHelp">
                <div id="imageHelp" class="form-text">Veuillez entrer un lien vers l'image que vous souhaitez afficher.</div>
            </div>

            <!--Description-->
            <div class="form-group mb-3">
                <label for="description">Description :</label>
                <textarea class="form-control" id="description" rows="3" name="description" aria-describedby="descriptionHelp">{{- activity.description -}}</textarea>
                <div id="descriptionHelp" class="form-text">Veuillez entrer une brève description de l'activité proposée, afin d'aider vos membres à comprendre de quoi il s'agit.</div>
            </div>
 
            <button type="submit" class="btn btn-primary w-100 mb-3">Ajouter l'activité</button>
        </form>
    </main>
{% endblock %}

{% block javascript %}<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>{% endblock %}




