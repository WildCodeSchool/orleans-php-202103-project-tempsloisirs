{% extends 'layout.html.twig' %}

{% block title %}Bienvenue Administrateur{% endblock %}

{% block stylesheet %}
    <!--Bootstrap: remove once merged-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="/assets/css/admin.css" rel="stylesheet">
    <link href="/assets/css/admin_home.css" rel="stylesheet">
{% endblock %}

{% block content %}
<div class="container">

    <header>
            <h1 class="h1">Bienvenue Administrateur</h1>
            <p>Dans cette section vous pourrez ajouter, modifier, supprimer ou lister les éléments de votre site.</p>
    </header>

    <section>
        <div class="to-section">
            <a class="btn btn-primary btn-block" href="/Admin/Activity/index" role="button">Activités</a>
            <p>Ajouter, éditer et supprimer vos activités</p>
        </div>

        <div class="to-section">
            <a class="btn btn-primary btn-block" href="/Admin/Event/index" role="button">Evènements</a>
            <p>Ajouter, éditer et suprimer vos évènements</p>
        </div>

        <div class="to-section">
            <a class="btn btn-primary btn-block" href="/Admin/Board/index" role="button">Conseil d'Administration</a>
            <p>Ajouter, éditer et suprimer des informations sur le conseil d’administration</p>
        </div>

        <div class="to-section">
            <a class="btn btn-primary btn-block" href="/Admin/Information/index" role="button">Informations</a>
            <p>Ajouter, éditer et suprimer les alertes affichées sur la page d’accueil</p>
        </div>
    </section>
</div>

{% endblock %}


{% block javascript %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
{% endblock %}