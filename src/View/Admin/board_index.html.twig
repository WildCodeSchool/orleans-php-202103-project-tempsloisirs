{% extends 'layout.html.twig' %}

{% block stylesheet %}<link rel="stylesheet" href="/assets/css/board.css">
{% endblock %}

{% block title %}Admin - Conseil d'administration
{% endblock %}

{% block content %}
	<main class="m-board">

		<header class="admin-header">
			<h1>GÃ©rer le Conseil d'administration</h1>
			<a href="#" class="btn primary-btn">Ajouter un membre</a>
		</header>

		<div class="row row-cols-1 row-cols-md-5 g-4">
			{% for boardMember in boardMembers %}
				<div class="col">
					<div class="card">
						<img src={{ boardMember.image }} class="card-img-top" alt="...">
						<div class="card-body">
							<h5 class="card-title">{{ boardMember.firstname }}
								{{ boardMember.surname }}</h5>
							<p class="card-text">{{ boardMember.role }}</p>
						</div>
						<div class="links">
							<a href="#" class="btn primary-btn">Modifier</a>
							<a href="#" class="btn delete">Supprimer</a>
						</div>
						<div class="card-footer">
							<small class="text-muted">Last updated 3 mins ago</small>
						</div>
					</div>
				</div>
			{% else %}
				<li>Nothing to display</li>
			{% endfor %}
		</div>

		<footer class="admin-footer">
			<a href="#" class="btn primary-btn">Retour au site principal</a>
			<a href="#" class="btn primary-btn">Accueil Admin</a>
		</footer>

	</main>
{% endblock %}
